<section class="users-new">

  <header class="page-header">
    <h1>User Registration</h1>
  </header>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">
      <%= form_for :user, url: '/users' do |form| %>

        <div class="form-group">
          Name: <%= form.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
          Email: <%= form.text_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          Password: <%= form.password_field :password, class: 'form-control' %>
        </div>
        <div class="form-group">
          Password Confirmation: <%= form.password_field :password_confirmation, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.submit "Submit", class: 'btn-btn-primary' %>
        </div>
        <% end %>
    </div>
  </div>

</section>

